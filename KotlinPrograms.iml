import { When, Then } from '@wdio/cucumber-framework';
import { getPage } from '../../pageobjects/base/Baseutil.js';
import IosOTPPage from '../../pageobjects/ios/ios.otp.page.js';
import AndroidOTPPage from '../../pageobjects/android/android.otp.page.js';

const OTPPage = getPage({ ios: IosOTPPage, android: AndroidOTPPage });

When("I enter the OTP {string} {string} {string} {string} {string} {string}", 
    async function (this: any, otp1, otp2, otp3, otp4, otp5, otp6) {
    await OTPPage.enterOTP([otp1, otp2, otp3, otp4, otp5, otp6]);
});

Then("I click onto the verify button", async function (this: any) {
    await OTPPage.verifyOTP();
});
